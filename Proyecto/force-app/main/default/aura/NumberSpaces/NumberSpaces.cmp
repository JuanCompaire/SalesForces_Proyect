<aura:component >
    <aura:attribute name="spacesCount" type="Integer" default="2"/>
    <aura:attribute name="randomNumber" type="Integer"/>
    <aura:attribute name="numbers" type="List" default="[]"/>
    <aura:attribute name="sum" type="Integer" default="0"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:handler event="c:NumberButtonClick" action="{!c.handleNumberButtonClick}"/>

    <div>
        <p>Numero Aleatorio: {!v.randomNumber}</p>
        <p>Suma: {!v.sum}</p>
        <aura:iteration items="{!v.numbers}" var="number">
            <p>{!number}</p>
        </aura:iteration>
    </div>
</aura:component>
